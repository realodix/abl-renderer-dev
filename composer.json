{
    "name": "realodix/hippo",
    "description": "Ad blocker filters compiler",
    "license": "MIT",
    "authors": [{"name": "Budi Hermawan", "role": "Developer"}],
    "require": {
        "php": "^8.0",
        "laravel-zero/framework": "^9.2",
        "nette/neon": "^3.3",
        "nunomaduro/termwind": "^1.14"
    },
    "require-dev": {
        "mockery/mockery": "^1.4.4",
        "pestphp/pest": "^1.21.3",
        "phpstan/phpstan": "^1.9",
        "realodix/relax": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": false
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["hippo"]
}
